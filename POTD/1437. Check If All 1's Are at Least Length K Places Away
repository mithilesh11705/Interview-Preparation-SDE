class Solution {
public:
    bool kLengthApart(vector<int>& nums, int k) {
        
        int n=nums.size();

        int ans=INT_MAX;
        int curr=-1,prev=-1;
        for(int i=0;i<n;i++)
        {
            if(nums[i]==1)
            {
                if(curr==-1 && prev==-1)
                {
                    curr=i;
                    prev=curr;
                }
                else
                {
                    curr=i;
                    ans=min(ans,curr-prev);
                    prev=curr;
                }
            }
        }

        return ans>k;
    }
};
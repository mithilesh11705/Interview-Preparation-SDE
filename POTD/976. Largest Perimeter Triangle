class Solution {
public:
    int largestPerimeter(vector<int>& nums) {
        
        int n=nums.size();
        sort(nums.begin(),nums.end());

        vector<int>prefix(n);
        long long s=0;
        
        int ans=INT_MIN;
        int j=2,i=0;

       for(int i=0;i<n;i++)
       {
            int s=nums[i]+nums[i+1];
            if(j<n)
            {
            if(s>nums[j])
            {   
                ans=max(ans,s+nums[j]);
                s=0;
            }
            }
            else
            break;
            j++;
       }

        return ans!=INT_MIN? ans:0;

    }
};
class Solution {
public:
    int totalMoney(int n) {
        int sum=0;
        int k=1;
        int count=1;
        for(int i=1;i<=n;i++)
        {
            sum+=k;
            k++;
            if(i % 7 ==0)
            {
                count++;
                k=count;
            }

        }
        return sum;
    }
};
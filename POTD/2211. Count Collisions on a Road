class Solution {
public:
    int countCollisions(string ds) {
        int n = ds.size();
        int i = 0, j = n - 1;

    
        while (i < n && ds[i] == 'L') i++;

       
        while (j >= 0 && ds[j] == 'R') j--;

        int collisions = 0;

    
        for (int k = i; k <= j; k++) {
            if (ds[k] == 'L' || ds[k] == 'R') collisions++;
        }

        return collisions;
    }
};

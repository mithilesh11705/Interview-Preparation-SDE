class Solution {
public:
    bool isOneBitCharacter(vector<int>& bits) {

        int n = bits.size();
        if (n == 1)
            return true;
        int i = 0, k = 0;
        while (i < n) {
            if (bits[i] == 1) {
                i += 2;
                k = 1;
            } else {
                k = 0;
                i++;
            }
        }

        return k == 0;
    }
};
class Solution {
  public:
    int assignHole(vector<int>& mices, vector<int>& holes) {
        // code here
        sort(mices.begin(),mices.end());
        sort(holes.begin(),holes.end());
        int n=mices.size();
        int c=INT_MIN;
        for(int i=0;i<n;i++)
        {
            int dist=abs(mices[i]-holes[i]);
           // cout<<dist<<endl;
            c=max(c,dist);
        }
        return c;
    }
};



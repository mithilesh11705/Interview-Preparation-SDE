class Solution {
public:
    int maxFreqSum(string s) {
        unordered_map<char,int>mpv;
        unordered_map<char,int>mpc;
        
        int n=s.size();
        for(int i=0;i<n;i++)
        {
            if(s[i]=='a' || s[i]=='e' || s[i]=='i' || s[i]=='o'||s[i]=='u')
            {
                mpv[s[i]]++;
            }
            else
            {
                mpc[s[i]]++;
            }
        }
        int mxe=0,mxc=0;
        for(auto x:mpv)
        {
            mxe=max(mxe,x.second);
        }
        for(auto x:mpc)
        {
            mxc=max(mxc,x.second);
        }
        return mxe+mxc;
    }
};
class Solution {
public:
    int countUnguarded(int m, int n, vector<vector<int>>& guards,
                       vector<vector<int>>& walls) {
        vector<vector<int>> grid(m, vector<int>(n, 0));

        for (auto& e : walls)
            grid[e[0]][e[1]] = 2;

        for (auto& e : guards)
            grid[e[0]][e[1]] = 2;

        int dr[4] = {-1, 0, 1, 0};
        int dc[4] = {0, 1, 0, -1};

        for (auto& g : guards) {
            int x = g[0], y = g[1];

            for (int d = 0; d < 4; d++) {

                int nx = x + dr[d], ny = y + dc[d];

                while (nx >= 0 && ny >= 0 && nx < m && ny < n && grid[nx][ny] != 2) {
                    if (grid[nx][ny] == 0)
                    grid[nx][ny] = 1;
                    nx += dr[d];
                    ny += dc[d];
                }
            }
        }

        int cnt = 0;
        for (int i = 0; i < m; i++)
            for (int j = 0; j < n; j++)
                if (grid[i][j] == 0)
                    cnt++;

        return cnt;
    }
};

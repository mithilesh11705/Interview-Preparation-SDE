class Solution {
public:
    int findSmallestInteger(vector<int>& nums, int value) {
        int n = nums.size();
        vector<int> grid(value, 0);  

        for (int i = 0; i < n; i++) {
     
            nums[i] = ((nums[i] % value) + value) % value;
            grid[nums[i]]++;  
        }

    
        int ans = 0;
        while (true) {
            int rem = ans % value;
            if (grid[rem] == 0) 
                return ans;  
            grid[rem]--;       
            ans++;
        }
    }
};

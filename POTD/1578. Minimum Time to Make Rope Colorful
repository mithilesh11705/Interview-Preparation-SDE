
class Solution {
public:
    int minCost(string col, vector<int>& need) {
        int n = col.size(), sum = 0;
        
        for (int i = 1; i < n; i++) {
            if (col[i] == col[i - 1]) {
                sum += min(need[i], need[i - 1]);
                need[i] = max(need[i], need[i - 1]);
            }
        }
        return sum;
    }
};
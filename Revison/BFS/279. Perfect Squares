class Solution {
public:
    int numSquares(int n) {

        vector<bool> vis(n + 1, false);
        queue<int> q;
        q.push(n);
        vis[n] = true;
        int level = 0;

        while (!q.empty()) {
            int n = q.size();

            level++;
            for (int i = 0; i < n; i++) {
                int node = q.front();
                q.pop();

                for (int j = 0; j * j <= node; j++) {
                    int next = node - (j * j);

                    if (next == 0)
                        return level;

                    if (vis[next] != true) {
                        vis[next] = true;
                        q.push(next);
                    }
                }
            }
        }
        return level;
    }
};

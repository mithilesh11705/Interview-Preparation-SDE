class Solution {
  public:
    int maxLength(vector<int>& arr) {
    unordered_map<int, int> mp; 
    int sum = 0, maxLength = 0;

    for (int i = 0; i < arr.size(); i++) {
        sum += arr[i];

       
        if (sum == 0)
            maxLength = i + 1;

       
        if (mp.find(sum) != mp.end()) {
            maxLength = max(maxLength, i - mp[sum]);
        } else {
          
            mp[sum] = i;
        }
    }

    return maxLength;
}
};